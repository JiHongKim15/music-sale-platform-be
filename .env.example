# .env.example - Environment Variables for Music Sale Platform Backend

# --- Spring Profile ---
# Specifies the active Spring profiles (e.g., local, dev, prod)
SPRING_PROFILES_ACTIVE=local

# --- Database Configuration ---
# MySQL database connection details
DB_USERNAME=root
DB_PASSWORD=password
DB_HOST=localhost
DB_PORT=3306
DB_NAME=music_sale_db

# --- JWT Configuration ---
# Secret key for JWT token generation and validation. Must be long and complex.
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-enough-for-security-at-least-256-bits
# Expiration time for JWT tokens in milliseconds (e.g., 86400000 for 24 hours)
JWT_EXPIRATION_MS=86400000

# --- OAuth2 Configuration (Social Login) ---
# Google OAuth2 Client ID and Secret
GOOGLE_CLIENT_ID=TODO_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=TODO_GOOGLE_CLIENT_SECRET

# Naver OAuth2 Client ID and Secret
NAVER_CLIENT_ID=TODO_NAVER_CLIENT_ID
NAVER_CLIENT_SECRET=TODO_NAVER_CLIENT_SECRET
NAVER_AUTH_URI=https://nid.naver.com/oauth2.0/authorize
NAVER_TOKEN_URI=https://nid.naver.com/oauth2.0/token
NAVER_USER_INFO_URI=https://openapi.naver.com/v1/nid/me

# Kakao OAuth2 Client ID and Secret
KAKAO_CLIENT_ID=TODO_KAKAO_CLIENT_ID
KAKAO_CLIENT_SECRET=TODO_KAKAO_CLIENT_SECRET
KAKAO_AUTH_URI=https://kauth.kakao.com/oauth/authorize
KAKAO_TOKEN_URI=https://kauth.kakao.com/oauth/token
KAKAO_USER_INFO_URI=https://kapi.kakao.com/v2/user/me

# --- Server Port ---
SERVER_PORT=8080
